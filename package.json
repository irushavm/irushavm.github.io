{
  "name": "irushavm.github.io",
  "version": "1.0.0",
  "description": "React and Webpack version of my site",
  "main": "index.js",
  "scripts": {
    "dev-css": "node-sass src/sass/main.scss dist/index.css",
    "build-css": "node-sass src/sass/main.scss dist/index.css --output-style compressed",
    "dev": "webpack-dev-server --hot --host 0.0.0.0",
    "build": "webpack -p",
    "deploy": "npm run build && echo 'Removing cache in /tmp...' && rm -r /tmp/irushavm.github.io.dist && echo 'Copying dist to /tmp...' && cp -r ./dist /tmp/irushavm.github.io.dist && git checkout deploy && echo 'Replacing dist with one from /tmp...'  && rm -r ./dist && cp -r /tmp/irushavm.github.io.dist ./dist && git add ./dist && git commit -m 'New deployment' && git push -f origin deploy",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irushavm/irushavm.github.io.git"
  },
  "keywords": [
    "website",
    "react",
    "irushavm"
  ],
  "author": "Irusha Vidanamadura",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/irushavm/irushavm.github.io/issues"
  },
  "homepage": "https://github.com/irushavm/irushavm.github.io#readme",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "react": "^16.8.0",
    "react-anchor-link-smooth-scroll": "^1.0.5",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "bulma": "^0.7.2",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.5.4",
    "css-loader": "^3.2.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0",
    "webpack-hot-middleware": "^2.25.0"
  }
}
